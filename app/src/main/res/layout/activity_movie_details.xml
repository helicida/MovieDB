<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scrollView" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tk.sbarjola.pa.moviedb.movieDetailsActivity">

    <ImageView
        android:layout_width="140dp"
        android:layout_height="220dp"
        android:id="@+id/peliculaPosterDetails"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Titulo"
        android:id="@+id/tituloDetails"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/peliculaPosterDetails"
        android:layout_toEndOf="@+id/peliculaPosterDetails" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Puntuacion"
        android:id="@+id/puntuacionDetails"
        android:textIsSelectable="false"
        android:textSize="15dp"
        android:layout_below="@+id/idiomaPeliculaDetails"
        android:layout_toRightOf="@+id/peliculaPosterDetails"
        android:layout_toEndOf="@+id/peliculaPosterDetails" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fecha"
        android:id="@+id/diaSalidaDetails"
        android:textSize="15dp"
        android:layout_below="@+id/tituloOriginalDetails"
        android:layout_toRightOf="@+id/peliculaPosterDetails"
        android:layout_toEndOf="@+id/peliculaPosterDetails" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Idioma"
        android:id="@+id/idiomaPeliculaDetails"
        android:textSize="15dp"
        android:layout_below="@+id/diaSalidaDetails"
        android:layout_toRightOf="@+id/peliculaPosterDetails"
        android:layout_toEndOf="@+id/peliculaPosterDetails" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Descripcion"
        android:id="@+id/descripcionDetails"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/peliculaPosterDetails"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Todos los pÃºblicos: "
        android:id="@+id/adultDetails"
        android:textSize="15dp"
        android:layout_below="@+id/puntuacionDetails"
        android:layout_toRightOf="@+id/peliculaPosterDetails"
        android:layout_toEndOf="@+id/peliculaPosterDetails" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Titulo Original"
        android:id="@+id/tituloOriginalDetails"
        android:textSize="15dp"
        android:layout_below="@+id/tituloDetails"
        android:layout_toRightOf="@+id/peliculaPosterDetails"
        android:layout_toEndOf="@+id/peliculaPosterDetails" />

</RelativeLayout>
</ScrollView>
