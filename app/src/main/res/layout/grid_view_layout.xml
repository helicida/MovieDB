<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="170dp"
        android:layout_height="250dp"
        android:id="@+id/grid_imagenPoster"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="9dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Titulo"
        android:id="@+id/grid_Titulo"
        android:layout_alignBottom="@+id/grid_imagenPoster"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/grid_imagenPoster"
        android:layout_alignEnd="@+id/grid_imagenPoster"
        android:background="#a0141414"
        android:textColor="#fff"
        android:textAlignment="center" />
</RelativeLayout>