<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="5dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:background="#2E373F"
    tools:showIn="@layout/activity_details_activty"
    tools:context="tk.sbarjola.pa.moviedb.DetailsActivtyFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="tk.sbarjola.pa.moviedb.movieDetailsActivity">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="220dp"
                android:id="@+id/peliculaPosterDetails"
                android:paddingRight="13dp"
                android:paddingBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Titulo"
                android:id="@+id/list_titulo"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/peliculaPosterDetails"
                android:layout_toEndOf="@+id/peliculaPosterDetails"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#ffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Puntuacion"
                android:id="@+id/list_puntuacion"
                android:textIsSelectable="false"
                android:textSize="16sp"
                android:layout_below="@+id/idiomaPeliculaDetails"
                android:layout_toRightOf="@+id/peliculaPosterDetails"
                android:layout_toEndOf="@+id/peliculaPosterDetails"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Fecha"
                android:id="@+id/list_diaSalida"
                android:textSize="16sp"
                android:layout_marginTop="21dp"
                android:layout_below="@+id/tituloOriginalDetails"
                android:layout_toRightOf="@+id/peliculaPosterDetails"
                android:layout_toEndOf="@+id/peliculaPosterDetails"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Idioma"
                android:id="@+id/idiomaPeliculaDetails"
                android:textSize="16sp"
                android:layout_below="@+id/list_diaSalida"
                android:layout_toRightOf="@+id/peliculaPosterDetails"
                android:layout_toEndOf="@+id/peliculaPosterDetails"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Descripcion"
                android:id="@+id/descripcionDetails"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/peliculaPosterDetails"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:textStyle="normal"
                android:textColor="#ffff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Todos los pÃºblicos: "
                android:id="@+id/adultDetails"
                android:textSize="16sp"
                android:layout_below="@+id/list_puntuacion"
                android:layout_toRightOf="@+id/peliculaPosterDetails"
                android:layout_toEndOf="@+id/peliculaPosterDetails"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="#fff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Titulo Original"
                android:id="@+id/tituloOriginalDetails"
                android:textSize="16sp"
                android:layout_below="@+id/list_titulo"
                android:layout_toRightOf="@+id/peliculaPosterDetails"
                android:layout_toEndOf="@+id/peliculaPosterDetails"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
            android:textColor="#fff" />

        </RelativeLayout>
    </ScrollView>
    </RelativeLayout>